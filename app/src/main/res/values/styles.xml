<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:windowBackground">@color/primaryWindowBackgroundColor</item>
    </style>

    <style name="AppTitleTextAppearance" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:titleTextColor">@android:color/white</item>
    </style>

    <!--Theme for our splash screen-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>




</resources>
